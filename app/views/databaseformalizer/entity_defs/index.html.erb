<div id="metaModelPicture"></div>
<script>
  jQuery('#myTab a').click(function (e) {
    e.preventDefault();
    jQuery(this).tab('show');
  })
</script>

<ul class="nav nav-tabs" id="myTab">
  <li class="active"><a href="#listing" data-toggle="tab">Listing entity defs</a></li>
  <li><a href="#metaModel" data-toggle="tab">See Meta-Model</a></li>
</ul>
 
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade in active" id="listing">
    <h1>Listing entity_defs</h1>
    <table class="table table-striped table-bordered table-condensed table-sorter table-fixed-header" > 
      <thead class="header">
        <tr>
          <th>Name</th>
          <th>Label</th>
          <th>Description</th>
          <th></th>
        </tr>
      </thead>
    <% @entity_defs.each do |entity_def| %>
        <tr>
          <td><%= entity_def.entity_def_name %></td>
          <td><%= entity_def.label %></td>
          <td><%= entity_def.description %></td>
          <td class="td-button-menu">  
            <div class="btn-group">
              <%= link_to 'Show', entity_def, :class => 'btn btn-info btn-mini' %>
              <%= link_to 'Edit', edit_databaseformalizer_entity_def_path(entity_def), :class => 'btn btn-warning btn-mini' %>
            </div>
            <%= button_to "Destroy", entity_def, :method=>:delete, :class=>'btn btn-danger btn-mini' %>
           </tr>
    <% end %>
    </table>
    
    <br />
    <%= link_to 'New Entity def', new_databaseformalizer_entity_def_path, :class => 'btn btn-primary' %>
    <br/>
  </div>
  
  <div class="tab-pane" id="metaModel">
    <div class="page-header">
        <ul class="thumbnails">
          <li class="span10">
            <a href="/UMLmetaModel.png" class="thumbnail">
              <img src="/UMLmetaModel.png" alt="">
            </a>
          </li>
        </ul>
    </div>
  </div>
</div>